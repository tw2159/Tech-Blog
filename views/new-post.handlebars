<div class="card">
  <h3 class="card-header">Create New Post</h3>
  
  <form id="new-post-form" class="card-body">
    <div class="form-group">
      <label for="title">Title</label>
      <input id="title-post" type="text" class="form-control" />
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <input id="content-post" name="content" class="form-control" />
    </div>
    <button type="submit" class="button btn">Create</button>
  </form>
</div>

<script src="/javascript/add-post.js"></script>
