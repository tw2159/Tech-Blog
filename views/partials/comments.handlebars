<div class="comments">
  {{#each this}}
    <div class="card">
      <h3 class="card-header">Comment</h3>
      <section class="card-body">
        <div class="comment-text">
          {{comment_text}}
        </div>
        <div class="comment-details">
          -{{user.username}}, {{format_date created_at}}
        </div>
      </section>
    </div>
  {{/each}}
</div>