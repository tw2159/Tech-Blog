<div class="card">
  <h3 class="card-header">Login</h3>

  <form id="login-form" class="card-body">
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username-login" type="text" class="form-control" />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password-login" type="password" class="form-control" />
    </div>
    <button type="submit" class="button btn">Login</button>
    <button class="button btn"><a href="/signup">Sign up</a></button>
  </form>
</div>

<script src="/javascript/login.js"></script>
